{{> header}}

<div class="warper">
    <div class="home-pages">
        <div class="container-home">

            {{#each courses}}
            <div class="container-item">
                <a href="/courses/{{this.slug}}"><img src="{{this.image}}" alt="{{this.name}}"></a>
                <h3><a href="/courses/{{this.slug}}">{{this.name}}</a></h3>
                <label>Author: {{this.level}}</label>
            </div>
            {{/each}}
        </div>
        <ul class="pagination justify-content-center ">
            {{#each pages}}
                <li class="page-item" id="listItem">
                <a class="page-link" href="/home?page={{this}}">{{this}}</a></li>
            {{/each}}    
        </ul>

    </div>
</div>


            
        


