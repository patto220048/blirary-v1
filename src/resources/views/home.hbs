<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card">
                <a href="http://localhost:3000/courses/{{this.slug}}"> <img class="card-img-top" src="{{this.image}}" alt="Card image cap"></a>              
                <div class="card-body">
                    <a href="http://localhost:3000/courses/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Buy now</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>