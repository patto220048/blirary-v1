
<body>
    <form action="">
        <div class="container">
            <h3>Register System</h3>

        <div class="form-group">
            <label for="">Full Name: </label>
            <input type="text" required="true" class="form-control" id="Full_Name_ID" value="" placeholder="Enter Fullname" />
        </div>
        <div class="form-group">
            <label for="">User Name: </label>
            <input type="text" required="true" class="form-control" id="User_ID" value="" placeholder="Enter UserName" />
        </div>
        <div class="form-group">
            <label for="">Password: </label>
            <input type="password" required="true" class="form-control" id="Password_ID" value="" placeholder="Enter Password" />
        </div>
        <div class="form-group">
            <label for="">Confirmation Password: </label>
            <input type="password" required="true" class="form-control" id="Re_Password_ID" value="" placeholder="Enter Password" />
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-success" onclick="createNewUser()" value="Register" />
            <input type="button" class="btn btn-success" onclick="resetForm()" value="Reset" />
        </div>
        </div>
    </form>
    <script type="text/javascript" src="Signup.js"></script>
  </body>